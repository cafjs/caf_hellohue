{
    "name" : "ca",
    "components" : [
        {
            "module": "caf_react#plug_ca",
            "name": "react",
            "description": "Manages background rendering for this CA.",
            "env" : {
                "maxRetries" : "$._.env.maxRetries",
                "retryDelay" : "$._.env.retryDelay",
                "coinPlayTime" : "process.env.COIN_PLAY_TIME||900"
            },
            "components" : [
                {
                    "module": "caf_react#proxy",
                    "name": "proxy",
                    "description": "Provides the background rendering API.",
                    "env" : {

                    }
                }
            ]
        },
        {
            "module": "caf_iot#plug_ca",
            "name": "iot",
            "description": "Manages an IoT device for this CA.",
            "env" : {
                "maxRetries" : "$._.env.maxRetries",
                "retryDelay" : "$._.env.retryDelay",
                "marginInMsec": "process.env.MARGIN_IN_MSEC||1000"
            },
            "components" : [
                {
                    "module": "caf_iot#proxy",
                    "name": "proxy",
                    "description": "Provides access to an IoT device.",
                    "env" : {

                    }
                }
            ]
        },
        {
            "name": "handler",
            "components" : [
                {
                    "name": "props",
                    "env" : {
                        "serviceDiscover": "process.env.SERVICE_DISCOVER||FE0F",
                        "serviceControl": "process.env.SERVICE_CONTROL||932c32bd-0000-47a2-835a-a8d455b859dd",
                        "charLight": "process.env.CHAR_LIGHT||932c32bd-0002-47a2-835a-a8d455b859dd",
                        "charBrightness": "process.env.CHAR_BRIGHTNESS||932c32bd-0003-47a2-835a-a8d455b859dd",
                        "charColor": "process.env.CHAR_COLOR||932c32bd-0007-47a2-835a-a8d455b859dd"
                    }
                }
            ]
        }
    ]
}
